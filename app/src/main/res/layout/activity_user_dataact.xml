<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDataact">

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tvcontenprovider"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Content Provider"

        />
    <TextView
        android:layout_below="@+id/tvcontenprovider"
        android:id="@+id/UserData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Data"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/etuserdata"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/UserData"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvcontenprovider"/>

    <Button
        android:onClick="onClickAddDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnadd"
        android:layout_below="@+id/UserData"
        android:layout_marginLeft="20dp"
        android:text="Add User"
        android:layout_marginTop="20dp"/>
    <Button
        android:onClick="onClickShowDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnshow"
        android:layout_below="@+id/UserData"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Show All User"
        android:layout_toRightOf="@+id/btnadd"

        />
    <TextView
        android:layout_below="@+id/btnshow"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data User List"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_below="@+id/text2"
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        />


</RelativeLayout>